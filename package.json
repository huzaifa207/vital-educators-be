    "@nestjs/common": "^9.2.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.0",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/mapped-types": "^1",
    "@nestjs/platform-express": "^9.2.0",
    "@nestjs/platform-socket.io": "^9.2.0",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/serve-static": "^3.0.0",
    "@nestjs/websockets": "^9.2.0",
    "@prisma/client": "^3.15.2",
    "@prisma/studio": "^0.460.0",
    "@sentry/node": "^7.20.0",
    "@types/cookie-session": "^2.0.44",
    "@types/cron": "^1.7.3",
    "@types/multer": "^1.4.7",
    "aws-sdk": "^2.1253.0",
    "bad-words": "^3.0.4",
    "buffer-to-stream": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cloudinary": "^1.29.0",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "dotenv": "^16.0.0",
    "multer": "^1.4.4",
    "multer-s3": "^3.0.1",
    "nanoid": "^3.3.2",
    "nest-raven": "^9.0.0",
